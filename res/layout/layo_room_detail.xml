<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layo_room_detail_ll_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#E5E3E6"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/layo_room_detail_tv_room_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:maxLines="5"
            android:text="Room &apos;Sapphire Room&apos; reserved At 18:00 the 10 of January 2014"
            android:textColor="#393A3B"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/layo_room_detail_tv_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0.70"
                android:text="Avenida de la libertad, 23. 3ยบ Piso"
                android:textColor="#393A3B"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/layo_room_detail_ib_go_to_map"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:layout_gravity="right"
                android:layout_weight=".30"
                android:background="@null"
                android:src="@drawable/map_marker_64x64" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layo_room_detail_ll_body"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layo_room_detail_ll_fotter"
        android:layout_below="@+id/layo_room_detail_ll_header"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/layo_room_detail_tv_capacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/style_rounded_textview"
            android:padding="10dp"
            android:text="Capacity: 12 seats"
            android:textColor="#7A7A7A"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/layo_room_detail_lv_room_features"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/style_rounded_corners"
            android:divider="#FFFFFF"
            android:dividerHeight="1sp"
            android:fadeScrollbars="false" >
        </ListView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layo_room_detail_ll_fotter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:orientation="horizontal" >

        <Space
            android:id="@+id/layo_room_detail_space_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50" >
        </Space>

        <Button
            android:id="@+id/layo_room_detail_bt_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".50"
            android:background="@drawable/style_search_button"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/ic_menu_delete"
            android:text="Delete"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>